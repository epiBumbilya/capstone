<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/datatables/datatables1.css">
    <link rel="stylesheet" href="/datatables/datatables2.css">
    <link rel="stylesheet" href="/datatables/datatables3.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/stylefolder/bootstrap3.js"></script>
    <link rel="stylesheet" href="/stylefolder/admin.css">
    <title>Registered | Student Vehicle</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-white" id="sidebar-wrapper">
          <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
              <h6 class="fw-bold">
                Systematic Parking Monitoring System
              </h6>
          </div>
          <div class="list-group list-group-flush my-3">
              <a href="/admin/<%= username%>" class="list-group-item list-group-item-action bg-transparent second-text fw-bold ">
                  <img class="" src="/img/icons8-dashboard-layout-30.png" alt=""> 
                  Dashboard</a>
              <a href="/parkingspace/<%= username%>"  class= "list-group-item list-group-item-action bg-transparent second-text fw-bold" <%= hidden%>>
                  <img class="" src="/img/icons8-parking-30.png" alt="">
                  Parking Space
              </a>
              <a href="/approve/<%= username%>" <%= hidden%> class="list-group-item list-group-item-action bg-transparent second-text fw-bold active">
                <img class="/" src="/img/icons8-carpool-30.png" alt="">
                Pending Student Vehicle
              </a>
    
                <a href="/faculty/<%= username%>" <%= hidden%> class="list-group-item list-group-item-action bg-transparent second-text fw-bold ">
                      <img class="" src="/img/icons8-carpool-30.png" alt=""> 
                      Pending Faculty Vehicle
              </a>
              <a href="/visitors/<%= username%>" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                <img class="" src="/img/icons8-carpool-30.png" alt=""> Visitor Logs
              </a>
              <a href="/adminlist/<%= username%>" class="list-group-item list-group-item-action bg-transparent second-text fw-bold" <%= hidden%>>
                <img class="" src="/img/icons8-admin-settings-male-30.png" alt=""> 
                Admin List
              </a>
          </div>
      </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i id="menu-toggle">
                        <img src="/img/icons8-hamburger-menu-20.png" alt="">
                    </i>
                    <h2 class="fs-2 m-0 p-2">Student Vehicle</h2>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="text-uppercase nav-link dropdown-toggle second-text fw-bold" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <%= fname%> <%= mname%> <%= lname%>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                              <li><a class="dropdown-item" href="/adminedit/<%= username%>">Edit Profile</a></li>
                              <li>
                                <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                  Change Password
                                </a>
                              </li>
                              <li><a class="dropdown-item text-danger" href="/logout">Log Out</a></li>
                            </ul>
                          </li>
                    </ul>
                </div>
            </nav>
             <!-- Modal -->
             <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Change Password</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <form method="post">
                      <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Enter New Password</label>
                        <input type="password" class="form-control" id="recipient-name" name="adminchangepassword" required>
                      </div>
                      <div class="modal-footer">
                        <button type="Success" class="btn btn-primary" formaction="/changepassadmin/<%= username%>">Save changes</button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <div class="container table-responsive">
                  <form class="" method="post">
                    <table id="example" class="display nowrap table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>Student <br> Id</th>
                                <th>Name</th>
                                <th>Section</th>
                                <th>Vehicle <br> Description</th>
                                <th>Barangay</th>
                                <th>City</th>
                                <th>Province</th>
                                <th>Contact No.</th>
                                <th>Plate<br> Number</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% rset.forEach((user)=>{ %>
                                <tr>
                                    <td class="text-uppercase"> <%= user.studentid%> </td>
                                    <td class="text-uppercase"><%= user.vehicletable_fname%><br><%= user.vehicletable_mname%><br><%= user.vehicletable_lname%> </td>
                                    <td class="text-uppercase"><%= user.major%>-<%= user.section%>-<%= user.year%> </td>
                                    <td class="text-uppercase"><%= user.vehicletable_descript%></td>
                                    <td class="text-uppercase"><%= user.vehicletable_brgy%></td>
                                    <td class="text-uppercase"><%= user.vehicletable_muni%></td>
                                    <td class="text-uppercase"><%= user.vehicletable_prov%></td>
                                    <td class="text-uppercase"><%= user.vehicletable_cp%></td>
                                    <td class="text-uppercase"><%= user.vehicletable_platenumber%></td>
                                    <td class="text-uppercase"><%= user.status%></td>
                                    <td data-title="Action">
                                        <a onclick="approveuser('<%= user.id%>','<%= username%>','<%= user.vehicletable_platenumber%>')" class="btn btn-success">
                                            <img class="" src="/img/icons8-approve-25.png" alt="">
                                        </a>
                                        <a onclick="pendinguser('<%= user.id%>','<%= username%>','<%= user.vehicletable_platenumber%>')" class="btn btn-danger">
                                          <img src="/img/icons8-cancel-25.png" alt="">
                                        </a>
                                        <br>
                                        <br>
                                        <a onclick="resetpassword('<%= user.id%>','<%= username%>','<%= user.vehicletable_platenumber%>')" class="btn btn-primary">
                                          <img src="/img/icons8-reset-password-25 (2).png" alt="">
                                        </a>
                                        <a onclick="deleteiitem('<%= user.id%>','<%= username%>')" class="btn btn-danger">
                                          <img src="/img/icons8-trash-can-25.png" alt="">
                                        </a>
                                    </td>
                                </tr>
                              <% }) %>
                        </tbody>
                    </table>
                  </form>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
    </div>
    <script src="/datatables/datatables1.js"></script>
    <script src="/datatables/datatables2.js"></script>
    <script src="/datatables/datatables3.js"></script>
    <script src="/datatables/datatables4.js"></script>
    <script src="/stylefolder/bootstrap5.js"></script>
    <script src="/sweetalert2/sweetalert2.js"></script>
    <script>
      function approveuser(id,username,plateno){
        Swal.fire({
        title: 'Are you sure you want to approve the Plate Number? \n'+plateno,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: 'green',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes'
        }).then((result) => {
        if (result.isConfirmed) {
            location.href="/edit/"+id+"/"+username
        }
        })
      }
      function deleteiitem(id,username){
        Swal.fire({
        title: 'Are you sure you want to delete Plate No.? \n'+id,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: 'green',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
        if (result.isConfirmed) {
            location.href="/deletestudent/"+id+"/"+username
        }
        })
      }
      function resetpassword(id,username,plateno){
        Swal.fire({
        title: 'Are you sure you want to reset the Password of Plate Number \n'+plateno,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: 'green',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, Reset!'
        }).then((result) => {
        if (result.isConfirmed) {
            location.href="/resetpassword/"+id+"/"+username
        }
        })
      }

      function pendinguser(id,username,plateno){
        Swal.fire({
        title: 'Are you sure you want to change the status pending the Plate Number? \n'+plateno,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: 'green',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, Reset!'
        }).then((result) => {
        if (result.isConfirmed) {
            location.href="/pendinguser/"+id+"/"+username
        }
        })
      }
    </script>
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
        
        $(document).ready(function(){
        $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
        });
    </script>
    <script>
     $(document).ready(function() {
          var table = $('#example').DataTable( {
              rowReorder: {
                  selector: 'td:nth-child(2)'
              },
              responsive: true
          } );
      } );
    </script>
    <script>
      const alert = '<%- alertforstudent%>'
      if (alert == "Succesfullyapprove" ){
            Swal.fire(
            'Succesfully Change!',
            'Approve',
            'success'
            )
      }else if (alert == "Succesfullypending" ){
            Swal.fire(
            'Succesfully Change!',
            'Reset to pending',
            'success'
            )
      }else if (alert == "Succesfullydelete" ){
            Swal.fire(
            'Succesfully Change!',
            'Successfully deleted',
            'success'
            )
      }else if (alert == "Succesfullyreset" ){
            Swal.fire(
            'Succesfully Change!',
            'Password has been reset',
            'success'
            )
      }
    </script>
</body>
</html>